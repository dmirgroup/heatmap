<?xml version="1.0" encoding="UTF-8"?>
<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="tileFileStrategy"
			class="de.uniwue.dmir.heatmap.core.processors.DefaultFileStrategy">
		<property name="parentFolder" value="${inner.group.path.tiles}" />
	</bean>

	<bean id="proxiedTileWriter"
			class="de.uniwue.dmir.heatmap.core.processors.VisualizationFileWriterProcessor">
		<constructor-arg name="visualizer" ref="visualizer" />
		<constructor-arg name="fileStrategy" ref="tileFileStrategy" />
		<constructor-arg name="fileFormat" value="png" />
		
		<constructor-arg name="parentFolder">
			<null />
		</constructor-arg>
	</bean>
	
	<bean id="tileWriter"
			class="de.uniwue.dmir.heatmap.core.processors.ProxyGroupFileWriter">
	
		<constructor-arg name="fileWriter" ref="proxiedTileWriter" />
		
		<constructor-arg name="groupIteratorFactory" >
			<bean class="de.uniwue.dmir.heatmap.core.util.MapKeyValueIteratorFactory" />
		</constructor-arg>
		
		<constructor-arg name="parentFolder" value="${out.tiles}" />	
	</bean>

</beans>