<?xml version="1.0" encoding="UTF-8"?>
<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="dataFileStrategy"
			class="de.uniwue.dmir.heatmap.core.processors.DefaultFileStrategy">
		<property name="parentFolder" value="${inner.group.path.data}" />
	</bean>

	<bean id="proxiedDataWriter"
			class="de.uniwue.dmir.heatmap.core.processors.JsonFileWriterProcessor">
		<constructor-arg name="fileStrategy" ref="dataFileStrategy" />
		<constructor-arg name="gzip" value="true" />
		<constructor-arg name="parentFolder">
			<null />
		</constructor-arg>
	</bean>
	
	<bean id="dataWriter"
			class="de.uniwue.dmir.heatmap.core.processors.ProxyGroupFileWriter">
	
		<constructor-arg name="fileWriter" ref="proxiedDataWriter" />
		
		<constructor-arg name="groupIteratorFactory" >
			<bean class="de.uniwue.dmir.heatmap.core.util.MapKeyValueIteratorFactory" />
		</constructor-arg>
		
		<constructor-arg name="parentFolder" value="${out.data}" />	
	</bean>

</beans>