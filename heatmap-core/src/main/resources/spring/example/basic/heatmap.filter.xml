<?xml version="1.0" encoding="UTF-8"?>
<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Defining filter. -->
	
	<bean id="dataToPixelMapper"
			class="de.uniwue.dmir.heatmap.core.data.sources.geo.mappers.SimpleGeoPointToWeightedSquaredSumMapper" />
			
	<bean id="dataToRelativeCoordinatesMapper"
			class="de.uniwue.dmir.heatmap.core.data.sources.geo.mappers.GeoPointToRelativeCoordinatesMapper">
		
		<constructor-arg name="mapProjection" ref="projection" />
	</bean>
			
	<bean id="pixelAdder"
			class="de.uniwue.dmir.heatmap.core.filters.operators.WeightedSquaredSumAdder" />
			
	<bean id="pixelAccess"
			class="de.uniwue.dmir.heatmap.core.filters.access.MapPixelAccess" />
	
	<bean id="proxiedFilter"
			class="de.uniwue.dmir.heatmap.core.filters.AddingFilter">
	
		<constructor-arg name="dataToPixelMapper" ref="dataToPixelMapper" />
		<constructor-arg name="dataToRelativeCoordinatesMapper" ref="dataToRelativeCoordinatesMapper" />
		<constructor-arg name="pixelAccess" ref="pixelAccess" />
		<constructor-arg name="pixelAdder" ref="pixelAdder" />
		
		<property name="width" value="120" />
		<property name="height" value="120" />
		
		<property name="centerX" value="60" />
		<property name="centerY" value="60" />
	</bean>
	
	
	<bean id="filter"
			class="de.uniwue.dmir.heatmap.core.filters.ProxyGroupFilter">
	
		<constructor-arg name="filter" ref="proxiedFilter"/>
		<constructor-arg name="groupAccess">
			<bean class="de.uniwue.dmir.heatmap.core.filters.access.MapGroupAccess">
				<constructor-arg name="tileFactory">
					<bean class="de.uniwue.dmir.heatmap.core.tiles.factories.GenericMapTileFactory" />
				</constructor-arg>
			</bean>
		</constructor-arg>
		<constructor-arg name="groupIdMapper">
			<bean class="de.uniwue.dmir.heatmap.core.data.sources.geo.mappers.SimpleGeoPointToGroupIdMapper">
				<property name="overallGroupId" value="OVERALL" />
			</bean>
		</constructor-arg>
			
	</bean>
	
</beans>