<?xml version="1.0" encoding="UTF-8"?>
<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Defining filter. -->
	
	<bean id="dataToPixelMapper"
			class="de.uniwue.dmir.heatmap.core.tiles.pixels.mappers.SimpleGeoPointToWeightedSquaredSumMapper" />
			
	<bean id="dataToRelativeCoordinatesMapper"
			class="de.uniwue.dmir.heatmap.core.data.sources.geo.mappers.GeoPointToRelativeCoordinatesMapper">
		
		<constructor-arg name="mapProjection" ref="projection" />
	</bean>
			
	<bean id="pixelAdder"
			class="de.uniwue.dmir.heatmap.core.filters.operators.WeightedSquaredSumAdder" />
			
	<bean id="pixelAccess"
			class="de.uniwue.dmir.heatmap.core.filters.access.MapPixelAccess" />
	
	<bean id="filter"
			class="de.uniwue.dmir.heatmap.core.filters.AddingFilter">
	
		<constructor-arg name="dataToPixelMapper" ref="dataToPixelMapper" />
		<constructor-arg name="dataToRelativeCoordinatesMapper" ref="dataToRelativeCoordinatesMapper" />
		<constructor-arg name="pixelAccess" ref="pixelAccess" />
		<constructor-arg name="pixelAdder" ref="pixelAdder" />
	</bean>
	
</beans>