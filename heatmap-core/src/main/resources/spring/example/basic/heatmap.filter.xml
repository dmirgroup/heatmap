<?xml version="1.0" encoding="UTF-8"?>
<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Defining filter. -->
	
	<bean id="internalMapper"
			class="de.uniwue.dmir.heatmap.impl.core.data.type.mapper.ValuePixelToWeightedSquaredSumMapper" />
			
	<bean id="adder"
			class="de.uniwue.dmir.heatmap.impl.core.filter.operators.WeightedSquaredSumAdder" />
			
	<bean id="filter"
			class="de.uniwue.dmir.heatmap.impl.core.filter.AddingMapFilter">
	
		<constructor-arg name="mapper" ref="internalMapper" />
		<constructor-arg name="adder" ref="adder" />
		
		<property name="width" value="120" />
		<property name="height" value="120" />
		<property name="centerX" value="60" />
		<property name="centerY" value="60" />
	</bean>
	
</beans>