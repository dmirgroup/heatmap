<?xml version="1.0" encoding="UTF-8"?>
<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context" 
	xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	xmlns:tx="http://www.springframework.org/schema/tx" 
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd
		http://www.springframework.org/schema/jdbc
		http://www.springframework.org/schema/jdbc/spring-jdbc.xsd
		http://www.springframework.org/schema/tx
		http://www.springframework.org/schema/tx/spring-tx.xsd">

	<import resource="datasource.xml"/>

	<bean id="zoomLevelRange"
			class="de.uniwue.dmir.heatmap.core.IHeatmap.ZoomLevelRange">
		<constructor-arg name="min" value="0" />
		<constructor-arg name="max" value="10" />
	</bean>

	<bean id="heatmapSettings"
			class="de.uniwue.dmir.heatmap.core.IHeatmap.HeatmapSettings" >
		<property name="zoomLevelRange" ref="zoomLevelRange" />
	</bean>
		
	<bean id="projection"
			class="de.uniwue.dmir.heatmap.impl.core.data.source.geo.MercatorMapProjection">
		<constructor-arg name="tileSize" value="#{heatmapSettings.tileSize}" />
		<constructor-arg name="zoomLevelMapper" value="#{heatmapSettings.zoomLevelMapper}" />
	</bean>
	
	<bean id="coordinateMapper"
			class="de.uniwue.dmir.heatmap.impl.core.data.source.geo.GeoPointToGeoCoordinateMapper" />
		
	<bean id="externalDataMapper"
			class="de.uniwue.dmir.heatmap.impl.core.data.source.geo.GeoPointToValuePixelMapper" />
	
<!-- 	<bean id="rtreeGeoDataSource"
			class="de.uniwue.dmir.heatmap.impl.core.data.source.geo.RTreeGeoDataSource">
			
		<constructor-arg name="dataSource" ref="geoDataSource" />
		<constructor-arg name="mapper" ref="coordinateMapper" />
	</bean> -->
	
	<bean id="tileDatasource"
			class="de.uniwue.dmir.heatmap.core.data.source.geo.GeoTileDataSource" >
			
		<constructor-arg name="geoDataSource" ref="geoDataSource"/>
		<constructor-arg name="projection" ref="projection" />
		<constructor-arg name="externalDataMapper" ref="externalDataMapper" />
		<constructor-arg name="coordinateMapper" ref="coordinateMapper" />
	</bean>
	
	<bean id="internalMapper"
			class="de.uniwue.dmir.heatmap.impl.core.data.type.mapper.ValuePixelToSumAndSizeMapper" />
			
	<bean id="adder"
			class="de.uniwue.dmir.heatmap.impl.core.filter.operators.SumAndSizeAdder" />
			
	<bean id="multiplier"
			class="de.uniwue.dmir.heatmap.impl.core.filter.operators.SumAndSizeScalarMultiplier" />
	
	<bean id="image"
			class="de.uniwue.dmir.heatmap.core.util.BufferedImageFactoryBean">
		<constructor-arg name="resource" value="classpath:filter/dot13_black.png" />
	</bean>
	
	<bean id="filter"
			class="de.uniwue.dmir.heatmap.impl.core.filter.ImageFilter">
	
		<constructor-arg name="internalMapper" ref="internalMapper" />
		<constructor-arg name="adder" ref="adder" />
		<constructor-arg name="multiplier" ref="multiplier" />
		<constructor-arg name="image" ref="image" />
	</bean>
	
	<bean id="tileFactory"
			class="de.uniwue.dmir.heatmap.core.ArrayTileFactory">
		<constructor-arg name="clazz" value="de.uniwue.dmir.heatmap.impl.core.data.type.internal.SumAndSize" />
	</bean>
	
	<bean id="heatmap"
			class="de.uniwue.dmir.heatmap.core.Heatmap">

		<constructor-arg name="tileFactory" ref="tileFactory" />
		<constructor-arg name="dataSource" ref="tileDatasource" />
		<constructor-arg name="filter" ref="filter" />
		<constructor-arg name="settings" ref="heatmapSettings" />
	</bean>
	
	<bean id="colorScheme"
			class="de.uniwue.dmir.heatmap.core.util.BufferedImageFactoryBean">
		<constructor-arg name="resource" value="classpath:color-schemes/classic_alpha70.png" />
	</bean>
	
	<bean id="ranges"
			class="de.uniwue.dmir.heatmap.core.util.RangeFactoryBean">
		<constructor-arg name="min" value="0." />
		<constructor-arg name="max" value="1000." />
		<constructor-arg name="image" ref="colorScheme" />
	</bean>
	
	<bean id="visualizer"
			class="de.uniwue.dmir.heatmap.impl.core.visualizer.SumAndSizeAlphaVisualizer">
		<constructor-arg name="colorScheme" ref="colorScheme" />
		<constructor-arg name="ranges" ref="ranges" />
		
		<property name="forceAlphaValue" value="true" />
		<property name="alphaValue" value="0.2f" />
	</bean>
	
	<bean id="tileFileStrategy"
			class="de.uniwue.dmir.heatmap.core.processing.DefaultFileStrategy">
		<constructor-arg name="folder" value="out/tiles" />
	</bean>
	
	<bean id="tileWriter"
			class="de.uniwue.dmir.heatmap.core.processing.VisualizationFileWriter">
		<constructor-arg name="visualizer" ref="visualizer" />
		<constructor-arg name="fileStrategy" ref="tileFileStrategy" />
		<constructor-arg name="fileFormat" value="png" />
	</bean>
	
	<bean id="dataFileStrategy"
			class="de.uniwue.dmir.heatmap.core.processing.DefaultFileStrategy">
		<constructor-arg name="folder" value="out/data" />
	</bean>
	
	<bean id="dataWriter"
			class="de.uniwue.dmir.heatmap.core.processing.DataFileWriter">
		<constructor-arg name="fileStrategy" ref="dataFileStrategy" />
	</bean>
	
	<bean id="writer"
			class="de.uniwue.dmir.heatmap.core.processing.ProxyTileProcessor">
		<constructor-arg name="processors">
			<list>
				<ref bean="tileWriter" />
				<ref bean="dataWriter" />
			</list>
		</constructor-arg>
	</bean>
	
</beans>